// Set the default language to be English.
var current_language = 'en';

// Get language code from the URL.
var path = window.location.pathname;
if (typeof path !== 'undefined' && path.length > 1) {
  var path_parts = path.split('/');
  if (typeof path_parts[1] !== 'undefined' && path_parts[1].length > 0) {
    if (typeof translations[path_parts[1]] !== 'undefined') {
      current_language = path_parts[1];
    }
  }
}

var current_translation = translations[current_language];


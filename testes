var sdkTag = document.createElement("script");
sdkTag.src = "https://cdn.gravito.net/sdk/gravitoSDK-v1.0.8.js";
sdkTag.onload = function () {
  window.gravito.ready(function () {
    gravito.initLightCMPWithGCM(
      "https://cdn.gravito.net/lightcmp",
      "bundle_latest_2"
    );
  })
};
document.body.appendChild(sdkTag);

// NOKMNT-2923: Gravito Light CMP's event listener.
document.addEventListener('gravito:cmp:light', function(event) {
  var button_click_events = ['layer1:opt-in:all', 'layer2:opt-out:all', 'layer2:opt-in:selected', 'layer2:opt-in:all'];
  if (button_click_events.includes(event.detail.eventType)) {
    location.reload();
  }
});
</script>

